<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">xiongwang</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/imformation?useUnicode=true&amp;characterEncoding=UTF-8</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.pool_size">200</property>
    	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    	<property name="hbm2ddl.auto">update</property>
    	<property name="format_sql">true</property>
    	<property name="hibernate.current_session_context_class">thread</property>
    	<mapping resource="entity/Student.hbm.xml"/>
    	<mapping resource="entity/User.hbm.xml"/>
    	<mapping resource="entity/Words.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
